pipeline {   
    agent any
    tools{
        maven 'maven-3.9'
    }

    
    stages{    
        stage("build jar") {
                steps {
                    script{
                        echo "building the application..."
                        dir('java-maven-app') {
                            sh 'mvn package'
                        }
                   }
                }
        }
    
        stage("build image") {
                steps {
                    script{
                        echo "building the docker image..."
                        withCredentials([
                            usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'PWD', usernameVariable: 'USER')]){
                                    sh '''
                                    cd java-maven-app/
                                    echo "pasword: $PWD"
                                    echo "username: $USER"
                                    docker build -t lala011/demo-app:jma-2.0 .
                                    echo "${PWD}" | docker login -u "${USER}" --password-stdin
                                    docker push lala011/demo-app:jma-2.0
                                    '''                               
                            }
                       
                    }
                }
        }
                 
        
    
        stage("deploy") {
            steps {
                script {
                    echo "deploying the application"
                }
            }
        }              
    }
} 

